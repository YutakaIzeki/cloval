
.container.text-center
  .preview
    = image_tag("sample.jpg", class: 'mt-5 mb-4 img-fluid', size: 13*13)
  = form_for @coordinate, html: {class: 'text-center', id: 'new_coordinate'} do |f|
    .feild.text-center
      = f.file_field :image, id: 'image_form'
      = f.hidden_field :sex, value: current_user.sex
    .action.mt-3
      = f.submit "Save", class: 'btn btn-outline-primary'
