
%span.like
  - if coordinate.like?(current_user)
    = form_for(coordinate.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f|
      = button_tag(class: "border border-0") do
        = content_tag :span, "", class: "fa fa-heart fa-fw faa-pulse animated liked"
  - else
    %div 
      = hidden_field_tag :coordinate_id, value: coordinate.id
    = form_for(coordinate.likes.new,remote: true) do |f|
      %div 
        = hidden_field_tag :coordinate_id, coordinate.id
      = button_tag(class: "border border-0") do
        = content_tag :span, "", class: "fa fa-heart fa-fw"